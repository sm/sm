#!/usr/bin/env bash

description() {
  printf "Extension for managing Nginx (http://wiki.nginx.org/Main)."
}

actions() {
  printf "
  install  - Install nginx on the system.
  setup    - Setup Nginx configuration.
  start    - Startup nginx.
  stop     - Stop nginx.
  restart  - Restart nginx.
  enable   - Enable servers.
  disable  - Disable servers.
  server   - Add new server(s) --enable.
  help     - Display this help text.
  "
}

usage() {
printf "
Description

  BDSM $(description)

Usage

  bdsm nginx [action]

Actions
  $(actions)
"
}

command="usage" # Default
while [[ $# -gt 0 ]] ; do
  token="$1" ; shift
  case "$token" in
    description) command="description" ;;
    actions)     command="actions"     ;;
    *)           command="usage"       ;;
  esac
done

$command

exit $?


