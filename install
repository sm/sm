# Load System BDSM Configuration, if it exists.
for file in /etc/bdsmrc "$HOME/.bdsmrc"
do
  if [[ -s "${file}" ]]
  then
    source "${file}" || true # Continue if it fails.
  fi
done

# The default prefix is /usr/local,
# this should be set to where BDSM is installed to in /etc/bdsmrc
if (( UID == 0 ))
then
  true "${prefix_path:=/usr/local}"
else
  true "${prefix_path:="$HOME"}"
fi

if [[ -z "${bdsm_path}" ]]
then
  if [[ "$prefix_path" = "$HOME" ]]
  then
    bdsm_path="${prefix_path}/.bdsm"
  else
    bdsm_path="${prefix_path}/bdsm"
  fi
fi

install_path="${bdsm_path}"         # Path to install everything to
bdsm_path="$PWD"                    # Path to load everything from
modules_path="${bdsm_path}/modules"

export bdsm_path install_path modules_path

# Load DSL and initialize BDSM core itself, manually.
source "${PWD}/modules/shell/core/dsl"

# Load fundamental Module DSL's
for module in variables modules logging trace filesystem core vcs
do
  for file in dsl initialize
  do
    source "${PWD}/modules/shell/${module}/${file}"
  done
done

source_files \
  "${PWD}/extensions/builtin/core/modules/shell/dsl" \
  "${PWD}/extensions/builtin/core/modules/shell/initialize" \
  "${PWD}/extensions/builtin/core/modules/shell/cli"

source "${PWD}/extensions/builtin/core/actions/install"
